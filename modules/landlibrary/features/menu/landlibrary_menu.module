/**
 * @file
 * This module provide the header menu of the Land Library
 *
 */

/**
 * Implements hook_context_default_contexts().
 */
function landlibrary_menu_context_default_contexts() {
  $export = array();

  $context = new stdClass();
  $context->disabled = FALSE; /* Edit this to true to make a default context disabled initially */
  $context->api_version = 3;
  $context->name = 'landlibrary-menu-context';
  $context->description = 'Land Library header menu';
  $context->tag = 'landlibrary';
  $context->conditions = array(
    'node' => array(
      'values' => array(
        'landlibrary_resource' => 'landlibrary_resource',
      ),
      'options' => array(
        'node_form' => '1',
      ),
    ),
    'path' => array(
      'values' => array(
        'library' => 'library',
        'library/*' => 'library/*',
      ),
    ),
  );
  $context->reactions = array(
    'block' => array(
      'blocks' => array(
        'landlibrary-menu' => array(
          'module' => 'menu',
          'delta' => 'landlibrary-menu',
          'region' => 'header',
          'weight' => '-10',
        ),
      ),
    ),
  );
  $context->condition_mode = 0;

// Translatables
// Included for use with string extractors like potx.
  t('Land Library header menu');
  t('landlibrary');

  $export[$context->name] = $context;
  return $export;
}
