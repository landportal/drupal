function landportal_display_preprocess_page(&$variables) {
  $sysmain = &$variables['page']['content']['system_main'];
  $content = null;
  // Taxonomy term page
  if (array_key_exists('term_heading', $sysmain)) {
    $term = $sysmain['term_heading']['term'];
    //dpm($term, "Got a term");
    // If we have a name_field set, clear page title
    if (@isset($term['name_field'])) {
      $variables['title'] = '';
    }
  }
  // Node page
  else if (array_key_exists('nodes', $sysmain)) {
    $first = array_keys($sysmain['nodes'])[0];
    //dpm($sysmain['nodes'][$first], $first);
    landportal_display__get_group_header($first, $variables);
  }
  /* if (isset($variables['node']) && isset($variables['node']->title_field) && */
  /*     array_key_exists('nodes', $variables['page']['content']['system_main'])) { */
  /*   landportal_display__get_group_header($variables['node']->nid, $variables); */
  /* } */
}

//
// Pick group_header and create a new group (title_header) to render instead of title
//
function landportal_display__get_group_header($nid, &$variables) {
    $content = $variables['page']['content']['system_main']['nodes'][$nid];
    if (isset($content['#fieldgroups']) && isset($content['#fieldgroups']['group_header'])) {
      $header = $content['#fieldgroups']['group_header'];
      $title = landportal_display_extract_groups('group_header', $content);
      field_group_fields_nest($title, $content);
      $variables['page']['title_header'] = $title;
      $variables['title'] = render($title);
      unset($variables['page']['content']['system_main']['nodes'][$nid]['#fieldgroups']['group_header']);
      unset($variables['page']['content']['system_main']['nodes'][$nid]['#groups']['group_header']);
      // Remove fields and groups children that now belong to the page-header
      foreach ($title['#group_children'] as $c => $g) {
        unset($variables['page']['content']['system_main']['nodes'][$nid][$c]);
        unset($variables['page']['content']['system_main']['nodes'][$nid]['#group_children'][$c]);
      }
      //dpm($variables['page']['content']['system_main']['nodes'][$nid], 'da node afta');
    }
}

function landportal_display_extract_groups($group_name, $content) {
  static $i = 0;
  $g = array(
    '#fieldgroups' => [],
    '#group_children' => [],
  );
  foreach ($content['#groups'][$group_name]->children as $field) {
    // Process nested groups
    if (substr($field, 0, 6) == 'group_') {
      $i++;
      $cg = landportal_display_extract_groups($field, $content);
      $i--;
      $g['#fieldgroups'][$field] = $cg['#fieldgroups'][$field];
      $g['#group_children'][$field] = $group_name;
      $g['#group_children'] += $cg['#group_children'];
      $g['#items'] += $cg['#items'];
      //unset($variables['page']['content']['system_main']['nodes'][$node->nid][$fieldc]);
    } else {
      if (isset($content[$field])) {
        $g['#items'][$field] = $content[$field];
        $g['#group_children'][$field] = $group_name;
      }
      //unset($variables['page']['content']['system_main']['nodes'][$node->nid][$field]);
    }
  }
  //dpm($g, 'E: '.$group_name);
  $g['#fieldgroups'][$group_name] = $content['#groups'][$group_name];
  $g += $g['#items'];
  if (!$i) unset($g['#items']);
  return $g;
}


