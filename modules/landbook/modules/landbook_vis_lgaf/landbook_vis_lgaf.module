<?php

function landbook_vis_lgaf_block_info() {
     $blocks['compare_block'] = array(
      'info' => t('Compare Block'),
    );
    $blocks['infografic_block'] = array(
      'info' => t('Infografic Block'),
    );
  return $blocks;
}

function landbook_vis_lgaf_block_view($delta = '') {
    $block = array();
    switch ($delta) {
        case 'compare_block' :
          $block['content'] = landbook_vis_lgaf_compare_block_view();
          break;
        case 'infografic_block' :
          $block['content'] = landbook_vis_lgaf_infografic_block_view();
          break;
    }
    return $block;
}

function landbook_vis_lgaf_compare_block_view(){
  $library_path = libraries_get_path('lbvis');
  drupal_add_js($library_path . '/js/lbvis.linechart.js');
  drupal_add_js($library_path . '/js/lbvis.lgaf.js');
  drupal_add_js(drupal_get_path('module', 'landbook_vis_lgaf').'/main.js');
  $block = block_load('landbook_vis_lgaf', 'compare_block');
  return theme('compare-countries-block',array('title'=>$block->title));
}
function landbook_vis_lgaf_infografic_block_view(){
  $block = block_load('landbook_vis_lgaf', 'infografic_block');
  return theme('infographics-block',array('title'=>$block->title));
}

function landbook_vis_lgaf_theme($existing, $type, $theme, $path){
  return array(
    'compare-countries-block'  => array('template' => 'compare-countries-block',array('title'=>NULL)),
    'infographics-block'  => array('template' => 'infographics-block',array('title'=>NULL)),
  );
}